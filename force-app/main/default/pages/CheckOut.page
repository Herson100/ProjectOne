<apex:page standardController="Shopping_Cart__c"
           recordSetVar="myCart"
           extensions="CheckoutExtension">
    
    <!--button that creates cart and navigate to pizza page-->
    <apex:form >
        <apex:pageBlock >
            <apex:commandButton action="{!cartThenPage}"
                                value="Add a pizza"/>
        </apex:pageBlock>
    </apex:form>
    		
    <!--display information to customer-->
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockTable value="{!myCart}" var="cart">
                <apex:column value="{!cart.name}" />
                <apex:column value="{!cart.Account__c}" />
                <apex:column value="{!cart.Total_Cost__c}" />
                <apex:column value="{!cart.OrderSubmitted__c}" />
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
    
    <!--purchase button-->
    <apex:form >
    	<apex:pageBlock >
            <apex:commandButton action="{!CustomFunction}"
                                value="BUY!"/>
        </apex:pageBlock>
    </apex:form>
   
</apex:page>