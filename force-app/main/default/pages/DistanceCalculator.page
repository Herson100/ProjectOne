<apex:page controller="DistanceCalculatorController">
    <apex:pageBlock >
        <apex:form >
            <label>Enter an address to get time to delivery</label>
            <apex:pageBlockSection >
                <apex:inputText value="{!addressInput}"/> <br/>
                <apex:commandButton value="reload" action="{!remover}" rerender="latitude,longitude"/> <br/>
                <apex:outputText value="{!addressInput}" id="outputter"></apex:outputText> <br/>
                <apex:inputText value="{!destinationLatitude}" id="latitude"/>
                <apex:inputText value="{!destinationLongitude}" id="longitude"/> <br/>
                <apex:commandButton value="reload list" action="{!compareAll}" rerender="list"/> <br/>
            </apex:pageBlockSection>
        </apex:form>
        
        <apex:pageBlockTable value="{!locations}" var="current" id="list">
            <apex:column value="{!current.location.name}"/>
            <apex:column value="{!current.location.LocationField__Longitude__s}"/>
            <apex:column value="{!current.location.LocationField__Latitude__s}"/>
            <apex:column value="{!current.distance}">
                <apex:facet name="header">Time for pizza to arrive</apex:facet>
            </apex:column>
        </apex:pageBlockTable>
    </apex:pageBlock>
    
</apex:page>